{
  "name": "tsc-esm-ext",
  "version": "1.0.0",
  "description": "Post-processor for the TypeScript compiler that adds the js / mjs extension for compiled files if you want to use ESM as a module system",
  "license": "MIT",
  "author": "Kirill Dyakov",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dyakovk/tsc-esm-ext.git"
  },
  "bugs": {
    "url": "https://github.com/dyakovk/tsc-esm-ext/issues"
  },
  "homepage": "https://github.com/dyakovk/tsc-esm-ext#readme",
  "keywords": [],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^5.0.9",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5"
  }
}
